<div class="post">
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>{{post.title}}</h2>
            <div>
                Posted by {{post.user.userName}} on {{formatDate post.createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>

    {{#if post.comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>
        <div class="card-body">
            {{#each post.comments as |comments|}}
            {{> comments}} <!-- call partial to display comments -->
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form class="card" id="new-comment-form">
        <div class="card-header">
            <h3>Add New Comment</h3>
        </div>

        <div class="card-bdoy">
            <input type="hiddent" name="post-id" value="{{post.id}}" />
            <label class="form-label" for="comment-body">Comment</label>
            <textarea class="form-input" name="comment-body"></textarea>

            <button class="btn" type="submit">Submit</button>
        </div>
    </form>
</div>
<script src="/js/comment.js"></script>